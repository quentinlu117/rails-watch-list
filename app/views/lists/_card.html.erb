<%= link_to list_path(list), class: "card rounded" do %>
  <div class="card-body d-flex flex-column gap-3">

    <div class="d-flex flex-row gap-2">
      <h4 class="flex-grow-1"><%= list.name %>
        <span class="ms-2 badge text-bg-primary">
          <%= list.movies.count %>
          <%= list.movies.count > 1 ? "films" : "film" %>
        </span>
      </h4>
    </div>

    <div class="d-flex flex-row gap-3">
      <% list.movies.each do |movie| %>
        <%= image_tag(movie.poster_url, alt: movie.title, class: "rounded", width: "100px") %>
      <% end %>
    </div>

  </div>
<% end %>
